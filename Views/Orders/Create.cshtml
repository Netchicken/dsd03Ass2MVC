@model dsd03Ass2MVC.Models.Order

@{
    ViewData["Title"] = "Create";
}



<h1>Create an Order</h1>



<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label   style="color:white;" asp-for="OrderDate" class="control-label">Order Date</label>
                <input asp-for="OrderDate" class="form-control" />
                <span asp-validation-for="OrderDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label style="color:white;"  asp-for="ShippedDate" class="control-label">Shipped Date</label>
                <input asp-for="ShippedDate" class="form-control" />
                <span asp-validation-for="ShippedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label style="color:white;"  asp-for="CustomerId" class="control-label">Customer</label>
                <select asp-for="CustomerId" class ="form-control" asp-items="ViewBag.CustomerId"></select>
            </div>
            <div class="form-group">
                <label style="color:white;"  asp-for="StockId" class="control-label">Stock</label>
                <select asp-for="StockId" class ="form-control" asp-items="ViewBag.StockId"></select>
            </div>
            <div class="form-group">
                <label  style="color:white;" asp-for="StaffId" class="control-label">Staff</label>
                <select asp-for="StaffId" class ="form-control" asp-items="ViewBag.StaffId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
